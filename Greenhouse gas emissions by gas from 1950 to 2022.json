{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
        "text": "Greenhouse Gas Breakdown",
        "fontSize": 26,
        "offset": 15
  },
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/AaronTjc/Data-Visualisation-2/refs/heads/main/Data/percentage%20of%20each%20gas.csv"
  },
  "transform": [
    {
      "fold": [
        "Nitrous_Oxide_Percentage",
        "Methane_Percentage",
        "CO2_Percentage"
      ],
      "as": ["Gas", "Percentage"]
    },
    {
      "calculate": "datum.Gas == 'Methane_Percentage' ? 'Methane (CH₄)' : datum.Gas == 'CO2_Percentage' ? 'Carbon dioxide (CO₂)' : 'Nitrous oxide (N₂O)'",
      "as": "GasLabel"
    }
  ],
  "mark": {
    "type": "area",
    "line": {"color": "darkgray"},
    "interpolate": "monotone"
  },
  "encoding": {
    "x": {"field": "Year", "type": "temporal", "axis": {"title": null, "grid": false}},
    "y": {
      "field": "Percentage",
      "type": "quantitative",
      "stack": "normalize",
      "axis": {
        "title": "Percentage (%)", 
        "grid": false,
        "labelExpr": "datum.value * 100"  
      }
    },
    "color": {
      "field": "GasLabel",
      "type": "nominal",
      "scale": {"domain": ["Carbon dioxide (CO₂)", "Methane (CH₄)", "Nitrous oxide (N₂O)"],
        "range": ["#d45a59", "#1f77b4", "#d2b48c"]},
      "legend": {"title": "Greenhouse Gases"}
    },
    "opacity": {
      "condition": {"selection": "hover", "value": 1},
      "value": 0.3
    },
    "order": {
      "field": "GasLabel",
      "type": "nominal",
      "sort": ["Carbon dioxide (CO₂)", "Methane (CH₄)", "Nitrous oxide (N₂O)"]
    },

    "tooltip": [
      {
        "field": "Year",
        "type": "temporal",
        "timeUnit": "year",
        "title": "Year"
      },
      {"field": "GasLabel", "type": "nominal", "title": "Gas"},
      {
        "field": "Percentage",
        "type": "quantitative",
        "format": ".2f",
        "title": "Percentage(%)"
      }
    ]
  },
  "selection": {
    "hover": {
      "type": "single",
      "on": "mouseover",
      "clear": "mouseout",
      "empty": "all",
      "fields": ["GasLabel"]
    }
  }
  
}