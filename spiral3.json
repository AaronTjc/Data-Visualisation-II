{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 400,
  "height": 400,
  "padding": 5,
  "signals": [
    {"name": "padAngle", "value": 0.03},
    {"name": "bandPadding", "value": 0.1},
    {"name": "innerRadius", "value": 60},
    {"name": "hoverType", "value": null}
  ],
  "data": [
    {
      "name": "source",
      "url": "https://raw.githubusercontent.com/AaronTjc/Data-Visualisation-2/refs/heads/main/Data/nitrous.csv",  
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "table",
      "source": "source",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Year == 2020"
        },
        {
          "type": "window",
          "sort": {"field": "Nitrous Oxide Emissions", "order": "descending"},
          "ops": ["row_number"],
          "as": ["rank"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "typeScale",
      "type": "band",
      "paddingInner": {"signal": "bandPadding"},
      "range": [{"signal": "innerRadius"}, {"signal": "width / 2 - 10"}],
      "domain": {
        "data": "table",
        "field": "Sector",
        "sort": {"field": "Nitrous Oxide Emissions", "order": "descending"}
      }
    },
    {
      "name": "angleScale",
      "type": "log",  
      "range": [0, {"signal": "1.5 * PI"}],
      "domain": {"data": "table", "field": "Nitrous Oxide Emissions"}
    },
    {
      "name": "colorScale",
      "type": "ordinal",
      "domain": {"data": "table", "field": "Sector"},
      "range": ["#a93b75", "#E68A00", "#2874A6", "#B7950B", "#d12121", "#0b5394", "#9B59B6", "#8e7cc3", "#85521d", "#607d8b"]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 2"},
          "stroke": {"value": "#f0f0f0"},
          "strokeWidth": {"value": 1.5},
          "cornerRadius": {"value": 10}
        },
        "update": {
          "fill": {"scale": "colorScale", "field": "Sector"},
          "startAngle": {"value": 0},
          "endAngle": {"scale": "angleScale", "field": "Nitrous Oxide Emissions"},
          "padAngle": {"signal": "padAngle"},
          "innerRadius": {
            "scale": "typeScale", 
            "field": "Sector", 
            "sort": {"field": "Nitrous Oxide Emissions", "order": "descending"}
          },
          "outerRadius": {
            "scale": "typeScale",
            "field": "Sector",
            "offset": {"scale": "typeScale", "band": 1},
            "sort": {"field": "Nitrous Oxide Emissions", "order": "descending"}
          },
          "tooltip": {
            "signal": "datum.Sector + ': ' + format(datum['Nitrous Oxide Emissions'], ',.2f') + ' tonnes'"
          }
        }
      }
    }
  ]
}
